.container{
  width: 750rpx;
  height: auto;
  display: flex;
  flex-direction: column;
}


.top-line{
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

.top-line text{
  font-size: 33rpx;
  color: #000;
}


.city-content{
  width: 100%;
  height: auto;
  background-color: #fff;
  padding: 40rpx 0;

}

.title{
  padding-left: 30rpx;
  margin-bottom: 20rpx;
}

.city-list{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.list-item{
  border: 1rpx solid #000;
  border-radius: 15rpx;
  background-color: #fff;
  padding: 5rpx 20rpx;
  margin:0 39rpx;
  margin-top: 30rpx;
}


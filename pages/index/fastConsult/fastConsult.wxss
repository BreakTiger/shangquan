.container {
  width: 100%;
  justify-content: space-between;
  margin: 25rpx 0;
  padding: 0 25rpx;
}

.header-swper {
  width: 100%;
  height: 420rpx;
}

.slideImage {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.two-swiper {
  width: 340rpx;
  height: 230rpx;
}

.boxImg {
  width: 340rpx;
  height: 230rpx;
  border-radius: 10rpx;
}

/* 店铺内容 */

.content {
  background: #fff;
  width: 100%;
  height: 200rpx;
  justify-content: space-around;
}

.contentImg {
  width: 160rpx;
  height: 160rpx;
}

.contentImg image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.content_box {
  width: 500rpx;
  height: 200rpx;
}

.content-top {
  justify-content: space-between;
  height: 62rpx;
}

.top {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  color: rgba(48, 48, 48, 1);
}

.top_area {
  font-family: PingFangSC-Regular;
  color: #666;
  margin-right: 24rpx;
}

.content-center {
  height: 68rpx;
}

.unline {
  width: 2rpx;
  height: 18rpx;
  background: rgba(63, 63, 63, 1);
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.center-text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: #666;
}

.content_right {
  width: 100%;
  align-items: flex-end;
  height: 50rpx;
  /* justify-content: space-between; */
  justify-content: flex-end;
}

.lables {
  background-color: #fa6d22;
  font-size: 26rpx;
  color: #fff;
  padding: 5rpx;
  border-radius: 15rpx 0 15rpx 0;
}

.right {
  /* width: 100rpx; */
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 15px;
  line-height: 40rpx;
  text-align: center;
  color: rgba(254, 134, 47, 1);
  border: 1rpx solid rgba(254, 134, 47, 1);
  margin-right: 15rpx;
}

.emp {
  text-align: center;
}

.storeimgline {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  background-color: #fff;
  overflow: hidden;
}

.storeimg {
  width: 220rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 25rpx;
}

.imgcontent {
  width: 220rpx;
  height: 220rpx;
  border-radius: 10rpx;
  position: relative;
}

.goodsname {
  width: 220rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 30rpx;
  margin: 15rpx 0;
  text-align: center;
}

.areas {
  width: 190rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center;
}

.autoFix {
  width: auto;
  padding: 5rpx 15rpx;
  font-size: 23rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: #ed5736;
  color: #fff;
}

.autoFix_ {
  width: auto;
  padding: 5rpx 15rpx;
  font-size: 23rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  background: #ed956f;
  color: #fff;
}

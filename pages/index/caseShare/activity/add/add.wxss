.f30 text {
  font-size: 30rpx;
}

.orderbtn {
  width: 245rpx;
  height: 66rpx;
  line-height: 66rpx;
  color: #fff;
  background-color: #fb7435;
  font-size: 33rpx;
  margin: 0rpx;
}

.pc {
  color: #fb7435;
  width: 100rpx;
  overflow: hidden;
  margin-left: 25rpx;
}

input {
  width: 355rpx;
}

.alert {
  background: rgba(0, 0, 0, 0.6);
  width: 100%;
  z-index: 99;
  height: 100%;
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
}

.mask {
  margin: 150rpx auto;
  width: 70%;
  border-radius: 4rpx;
  height: 200rpx;
  background: #fff;
}

.mask-name {
  width: 100%;
  margin-top: 25rpx;
  font-size: 35rpx;
  color: #000;
}

.mask-pay {
  width: 100%;
  margin-top: 25rpx;
}

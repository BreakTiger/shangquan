.container {
  width: 750rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.order {
  width: 705rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 25rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 25rpx 0;
}

.line {
  width: 100%;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #999;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.lastline {
  width: 100%;
  padding: 25rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
}

.line-title {
  font-size: 30rpx;
}

.person {
  width: 705rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 25rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 25rpx;
}

.line-input {
  font-size: 29rpx;
  text-align: right;
}

.alone-line {
  width: 705rpx;
  height: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 25rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 25rpx;
}

.icons {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.icons text {
  margin-right: 10rpx;
}

.downbox {
  width: 100%;
  height: 120rpx;
}

.calculate-line {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  padding-left: 35rpx;
  padding-right: 25rpx;
}


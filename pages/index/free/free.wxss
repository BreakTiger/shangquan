.body-main {
  width: 100%;
  height: 100%;
}

page {
  background-color: #f7f7f7;
}

/* 店铺内容 */

.content {
  background-color: #fff;
  width: 100%;
  justify-content: space-around;
  padding-bottom: 10rpx;
  flex-wrap: wrap;
}

.content_ {
  background-color: #fff;
  width: 100%;
}

.contentImg {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.content_box {
  width: 534rpx;
  height: 200rpx;
}

.content-top {
  justify-content: space-between;
  height: 62rpx;
  padding-top: 15rpx;
}

.top {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  color: rgba(48, 48, 48, 1);
}

.top_area {
  font-family: PingFangSC-Regular;
  color: #666;
  margin-right: 15rpx;
}

.content-center {
  height: 68rpx;
  margin-top: -10rpx;
}

.unline {
  width: 2rpx;
  height: 18rpx;
  background: rgba(63, 63, 63, 1);
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.center-text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: #666;
}

.content_right {
  width: 100%;
  align-items: flex-end;
  height: 50rpx;
  justify-content: space-btween;
}

.content-price-left {
  font-size: 28rpx;
  color: #ff4427;
  line-height: 50rpx;
}

.content-price-right {
  font-size: 24rpx;
  color: #999;
  line-height: 50rpx;
  text-decoration: line-through;
  margin-left: 12rpx;
}

.right {
  width: 100rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 15px;
  line-height: 40rpx;
  text-align: center;
  color: rgba(254, 134, 47, 1);
  border: 1rpx solid rgba(254, 134, 47, 1);
}

.content-img {
  width: 220rpx;
  height: 220rpx;
}

.emp {
  text-align: center;
}

.ccc {
  width: 100%;
  padding-top: 10rpx;
  background: #fff;
}

.box-iner {
  width: 100%;
  height: 50rpx;
}

.auto_ {
  border: 1rpx solid #fd8230;
  width: auto;
  padding: 0 15rpx;
  color: #fd8230;
  font-size: 23rpx;
  border-radius: 20rpx;
  margin: 0 2rpx;
}

.autoFix {
  width: auto;
  padding: 5rpx 15rpx;
  font-size: 23rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  background: #ed956f;
  color: #ffff;
}

.autoFix_ {
  width: auto;
  padding: 5rpx 15rpx;
  font-size: 23rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: #ed5736;
  color: #fff;
}

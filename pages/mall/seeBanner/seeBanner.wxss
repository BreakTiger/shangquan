page {
  background: #fff;
}

.margin {
  width: 100%;
  height: 450rpx;
}

.content {
  margin: 25rpx auto;
  width: 90%;
  height: auto;
  /* padding: 20rpx 0; */
}

.container {
  width: 100%;
  height: auto;
}

.container-box {
  margin-top: 20rpx;
  width: 100%;
  margin-left: 25rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  height: auto;
  max-height: 676rpx;
  overflow: hidden;
  margin-bottom: 29rpx;
}

.container-box {
  width: 340rpx;
  border-radius: 10rpx;
  background: #fff;
  border: 1rpx solid #999;
  margin: 0 auto;
  padding-bottom: 20rpx;
}

.containerImg {
  width: 340rpx;
  height: 340rpx;
  position: relative;
}

.containertitle {
  width: 100%;
  font-size: 30rpx;
  color: #333;
  margin-top: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.containerPrice {
  width: 100%;
  justify-content: space-between;
  font-size: 30rpx;
  padding: 0 15rpx;
}

.price {
  color: #fa6d22;
  /* margin-left: 25rpx; */
}

._price {
  font-size: 24rpx;
  margin-left: 25rpx;
  text-decoration: line-through;
  color: #999;
}

.vip {
  width: 117rpx;
  height: 40rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
  background: #fa6d22;
  position: absolute;
  top: 0;
  text-align: center;
  line-height: 40rpx;
  border-top-left-radius: 10rpx;
}

.discount {
  width: auto;
  padding-left: 10rpx;
  padding-right: 10rpx;
  position: absolute;
  top: 59rpx;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #fff;
  background: #eba27c;
}

.look {
  width: auto;
  border: 1rpx solid #eba27c;
  color: #eba27c;
  padding: 0 20rpx;
  border-radius: 20rpx;
}
.while{
  width: 100%;
  height: 150rpx;
}

.auto{
  width: 100%;
}
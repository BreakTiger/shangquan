page {
  background: rgba(247, 247, 247, 1);
}

.header {
  position: relative;
}

.auto {
  width: 100%;
  margin: 0 auto;
}

.shop {
  width: 100%;
}

.mt {
  margin: 20rpx 0;
}

.mr {
  margin: 0 23rpx;
}

.pd {
  padding: 0 23rpx;
}

.b-r {
  border-radius: 10rpx;
  background: #fff;
  box-shadow: 12rpx 0rpx 21rpx rgba(153, 153, 153, 0.2);
}

.size28 {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: rgba(102, 102, 102, 1);
  margin: 20rpx 0;
}

.line-75 {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: rgba(51, 51, 51, 1);
  line-height: 75rpx;
}

.color {
  color: #666;
}

.header-img {
  width: 714rpx;
  height: 6rpx;
  position: absolute;
  bottom: 0;
}

.shop-img {
  width: 34rpx;
  height: 32rpx;
  margin-right: 18rpx;
  margin-top: 29rpx;
}

.shop-name {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  color: #333;
  line-height: 88rpx;
}

.shop-image {
  width: 190rpx;
  height: 190rpx;
}

.shopping-name {
  width: 440rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content-price-left {
  font-size: 28rpx;
  color: #fa6d22;
  line-height: 70rpx;
}

.content-price-right {
  font-size: 24rpx;
  color: #999;
  line-height: 70rpx;
  text-decoration: line-through;
  margin-left: 12rpx;
}

.underline {
  text-decoration: none;
}

.content_right {
  justify-content: space-between;
  margin-left: 20rpx;
}

.vip-discount {
  display: flex;
  justify-content: space-between;
  border-bottom: #efefef 1rpx solid;
}

.footer {
  justify-content: space-between;
  align-items: center;
}

button {
  width: 200rpx;
  height: 52rpx;
  font-size: 29rpx;
  line-height: 52rpx;
  background-color: #fb7435;
  color: #fff;
  margin: 21rpx 20rpx;
}

.content-input {
  margin: 15rpx auto;
  background: #fff;
  width: 100%;
  justify-content: center;
  border-radius: 20rpx;
}

.input-box {
  width: 90%;
  height: 88rpx;
  font-size: 28rpx;
  color: #666;
  justify-content: space-between;
  border-bottom: 1rpx solid #efefef;
}

.input-right {
  width: 11rpx;
  height: 19rpx;
  margin-left: 10rpx;
}

.input-box text {
  font-size: 28rpx;
  margin-left: 25rpx;
  color: rgba(51, 51, 51, 1);
}

.input-text {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
}

.input-text text {
  font-size: 30rpx;
  color: rgba(250, 109, 34, 1);
}

input {
  text-align: right;
}

.pay-type {
  width: 100%;
  height: 88rpx;
  margin: 20rpx auto;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  justify-content: space-between;
}

.pay-type text {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
}

.footer-text {
  font-size: 28rpx;
  margin-left: 25rpx;
  color: #e9903a;
}

.content-box {
  padding: 0 25rpx;
  width: 100%;
  background: #fff;
  height: 88rpx;
  border-radius: 20rpx;
  justify-content: space-between;
}

.mr-15 {
  margin-right: 15rpx;
}

.list_ {
  width: 96%;
  justify-content: space-between;
}

.position {
  width: auto;
  padding-left: 10rpx;
  padding-right: 10rpx;
  position: absolute;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #fff;
  background: #ed5736;
  border-top-left-radius:10rpx;
  opacity: 0.5;
  top: 0;
}

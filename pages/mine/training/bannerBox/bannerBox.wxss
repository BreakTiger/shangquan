page {
  background: #fff;
}

.background {
  width: 100%;
  height: 400rpx;
}

.boxTitle {
  width: 92%;
  height: auto;
  padding: 15rpx 0;
  margin: 25rpx auto;
  font-size: 38rpx;
  font-family: PingFangSC-Regular;
  color: #fd8230;
  text-align: center;
}

.boxContent {
  width: 94%;
  height: auto;
  padding: 25rpx 0;
  font-size: 28rpx;
  margin: 20rpx auto;
  font-family: PingFangSC-Regular;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
}

.boxDetail {
  width: 100%;
  align-items: center;
  margin-top: 50rpx;
  justify-content: center;
}

.detailName {
  font-size: 38rpx;
  width: 90%;
  font-family: PingFangSC-Regular;
  color: rgba(51, 51, 51, 1);
}

.detailTitle {
  margin-top: 10rpx;
  width: 90%;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
}

.boxImage {
  margin-top: 30rpx;
  width: 100%;
  justify-content: center;
}

.detailImg {
  width: 600rpx;
  height: 600rpx;
  position: relative;
}

.boxTwo {
  margin-top: 20rpx;
  width: 80%;
  align-items: center;
  justify-content: space-between;
}

.boxPrice {
  font-size: 36rpx;
  color: rgba(253, 130, 48, 1);
}

.boxbutton {
  width: 180rpx;
  height: 60rpx;
  color: rgba(255, 68, 0, 1);
  text-align: center;
  line-height: 60rpx;
  border: 1rpx solid rgba(255, 68, 0, 1);
  border-radius: 30rpx;
}

.btn {
  width: 295rpx;
  margin: 85rpx auto;
  border: 1rpx solid #000;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 10rpx;
  background: #fff;
}

.post {
  width: 150rpx;
  background: #fff;
  border: 1rpx solid #999;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 20rpx;
  z-index: 999;
  margin: 50rpx auto;
}

.close {
  position: absolute;
  top: -33rpx;
  right: -17rpx;
  width: 60rpx;
  height: 60rpx;
  z-index: 999;
}

.zhezhao {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.3;
}

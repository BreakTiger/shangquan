  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 30rpx;
  bottom: 201rpx;
}

button::after {
  background: none;
}

.buy {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 30rpx;
  bottom: 110rpx;
  opacity: 0;
  z-index: 999;

/*tab框切换*/

.nav_tab {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  margin: 20rpx auto;
  background: #fff;
  border-radius: 20rpx;
}

.show {
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  color: #333;
  font-size: 28rpx;
  opacity: 0.5;
}

.hidden {
  line-height: 100rpx;
  text-align: center;
  color: #fa6d22;
  flex: 1;
  font-size: 28rpx;
}

.nav_underline {
  background: #fa6d22;
  width: 54rpx;
  height: 6rpx;
  margin-top: -10rpx;
  margin-left: 50rpx;
  border-radius: 8rpx;
}

page {
  background-color: #ebebeb;
}

.bgr {
  background-color: #fff;
  border-radius: 10rpx;
}

.main-body {
  width: 100%;
  height: 100%;
}

.mt {
  margin-top: 20rpx;
}

.mian {
  width: 100%;
  /* height: 100%; */
}

.size26 {
  font-size: 26rpx;

/* 上 */

.mian-header {
  justify-content: space-between;
  margin: 0 25rpx;
  border-bottom: 1px solid #efefef;
}

/* 中 */

.content {
  background-color: #fff;
  width: 100%;
  justify-content: space-around;
}

.contentImg {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin: 15rpx 0;
}

.content_box {
  width: 534rpx;
}

.content-top {
  width: 510rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.top {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  color: rgba(48, 48, 48, 1);
}

.top_area {
  font-family: PingFangSC-Regular;
  color: #666;
  margin-right: 15rpx;
}

.content-center {
  height: 68rpx;
  margin-top: -10rpx;
}

.content-price-left {
  font-size: 28rpx;
  color: #ff4427;
  line-height: 50rpx;
}

.content-price-right {
  font-size: 24rpx;
  color: #999;
  line-height: 50rpx;
  text-decoration: line-through;
}

.color {
  color: #666;
}

.underline {
  text-decoration: none;
}

.content_right {
  justify-content: space-between;
}

.main-bottom {
  /* justify-content: space-between; */
  justify-content: flex-end;
  padding: 27rpx 0rpx;
  border-top: 1px solid #efefef;
  margin: 0 18rpx;
}


page {
  background: rgba(247, 247, 247, 1);
}

.auto {
  width: 690rpx;
  margin: 0 auto;
}

.mt {
  margin: 20rpx 0;
}

.mr {
  margin: 0 23rpx;
}
.pd{
  padding: 0 23rpx;
  
}

.b-r {
  border-radius: 10rpx;
  background: #fff;
  box-shadow: 12rpx 0rpx 21rpx rgba(153, 153, 153, 0.2);
}

.header {
  width: 100%;
  position: relative;
}

.header-circle {
  width: 12rpx;
  height: 12rpx;
  background-color: #fa6d22;
  border-radius: 50%;
  margin: 40rpx 20rpx 0 0;
}

.header-status {
  line-height: 88rpx;
  color: #fa6d22;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.size28 {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: rgba(102, 102, 102, 1);
  margin: 20rpx 0;
}
.line-75{
font-size:28rpx;
font-family:PingFangSC-Regular;
color:rgba(51,51,51,1);
line-height:75rpx;
}
.color{
  color: #666666;
}

.header-img {
  /* width: 634rpx;
  height: 6rpx;
  position: absolute;
  bottom: 0; */
}

.shop-img {
  width: 34rpx;
  height: 32rpx;
  margin-right: 18rpx;
  margin-top: 29rpx;
}

.shop-name {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  color: #333;
  line-height: 88rpx;
}

.shop-image {
  width: 190rpx;
  height: 190rpx;
  border-radius: 95rpx;
}

.shopping-name {
  width: 440rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.content-price-left{
  font-size: 28rpx;
  color: #FA6D22;
  line-height: 70rpx;
}
.content-price-right{
  font-size: 24rpx;
  color: #999999;
  line-height: 70rpx;
  text-decoration: line-through;
  margin-left: 12rpx;
}
.underline{
  text-decoration: none;
}

.content_right{
  justify-content: space-between;
}

.vip-discount{
  display: flex;
  justify-content: space-between;
  border-bottom: #EFEFEF 1rpx solid;
}
.footer{
  justify-content: flex-end;
}

button{
  width: 200rpx;
  height: 52rpx;
  font-size: 29rpx;
  line-height: 52rpx;
  background-color: #fb7435;
  color: #FFF;
  margin:21rpx 20rpx;
}

.count-line{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 10rpx;
  padding: 0 10rpx;
}

.count-line text{
  font-size: 28rpx;
}
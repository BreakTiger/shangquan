page {
  background: rgba(247, 247, 247, 1);
}

.header {
  width: 703rpx;
  padding: 25rpx 0;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  box-shadow: 0px 0px 0px rgba(153, 153, 153, 0.2);
  margin: 20rpx auto;
  display: flex;
}

.header-image {
  width: 120rpx;
  height: 120rpx;
  margin: 0 24rpx;
  border-radius: 10rpx;
}

.title-content{
  display: flex;
  flex-direction: column;
}

.header text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: rgba(51, 51, 51, 1);
  line-height: 36px;
}

.content {
  width: 702rpx;
  height: 361rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  box-shadow: 0px 0px 0px rgba(153, 153, 153, 0.2);
  margin: 0 auto;
}

textarea {
  width: 673rpx;
  height: 240rpx;
  background: rgba(247, 247, 247, 1);
  border-radius: 17rpx;
  box-shadow: 0px 0px 0px rgba(247, 247, 247, 0.35);
  margin: 0 auto;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  color: rgba(102, 102, 102, 1);
  line-height: 36rpx;
  text-indent: 1rem;
}

.content-start text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: rgba(51, 51, 51, 1);
  line-height: 75rpx;
  margin: 0 20rpx;
}

.flex {
  display: flex;
}

.up-pic {
  padding: 15rpx 15rpx;
  justify-content: center;
  background: #fff;
  margin: 25rpx 24rpx;
  border-radius: 20rpx;
}

.pic-box {
  flex-flow: wrap;
  width: 95%;
}

.ap-box {
  position: relative;
  margin-bottom: 10rpx;
}

.add-pic {
  width: 160rpx;
  height: 160rpx;
  margin-right: 35rpx;
  position: relative;
  /* margin: 20rpx 30rpx 20rpx 30rpx; */
}

/* 删除图片 */

.img-de {
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  position: absolute;
  right: -19rpx;
  top: -18rpx;
}

.hong-contant .teamwork-btn {
  width: 360rpx;
  height: 88rpx;
  border-radius: 50rpx;
  color: white;
  background-color: #14a1fd;
  margin: 0 auto;
  margin-top: 80rpx;
  margin-bottom: 40rpx;
}

button {
  width: 480rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  margin: 100rpx auto;
  background: linear-gradient(80deg, rgba(247, 97, 59, 1), rgba(253, 130, 48, 1));
  border-radius: 8rpx;
}

.stars {
  width: 700rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  box-shadow: 0px 0px 0px rgba(153, 153, 153, 0.2);
  margin: 20rpx auto;
}

.stars text {
  margin-left: 20rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  color: rgba(51, 51, 51, 1);
  line-height: 80rpx;
}

.stars-start {
  margin-right: 20rpx;
  margin-top: -15rpx;
}

.starts-l {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

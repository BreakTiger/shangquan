.backimg {
  width: 100%;
  height: 500rpx;
}

page {
  background: #fff;
}

/*tab框切换*/

.nav_tab {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #efefef;
}

.show {
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  color: #333;
  font-size: 30rpx;
  opacity: 0.5;
}

.hidden {
  line-height: 100rpx;
  text-align: center;
  color: #ef9ba8;
  flex: 1;
  font-size: 30rpx;
}

.nav_underline {
  background: #ef9ba8;
  width: 54rpx;
  height: 6rpx;
  margin-top: -10rpx;
  margin-left: 157rpx;
  border-radius: 8rpx;
}

.share {
  width: 450rpx;
  height: 450rpx;
}

/* 底部 */

.keep {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 30rpx;
}

button::after {
  border: none;
}

.bb {
  width: 480rpx;
  /* height: 80rpx; */
  background: linear-gradient(90deg, #fb6368, #ee0b88);
  color: #fff;
  z-index: 999;
}

.while {
  width: 100%;
  height: 200rpx;
}

/* 遮罩 */

.select-alert {
  width: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.6);
}

.mask {
  width: 480rpx;
  height: 550rpx;
  border-radius: 10rpx;
  margin: 200rpx auto;
}
